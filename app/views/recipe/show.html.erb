<div class="container">
  <br />

  <div id="box-white">

<h1><%= @recipe.name %>
<%= @recipe.rating %> star
<%= @recipe.instructions %></h1></div>

<a href="/recipe/<%= @recipe.id %>/edit">Edit</a>
<a href="/recipe/<%= @recipe.id %>/destroy"
      data-confirm="You sure?"
      data-method="delete"
      rel="nofollow" class="btn btn-default">Delete</a>


<p><a href="/recipe/<%= @recipe.id %>/tag/new">Add Tag</a></p>

<ul>
<% @recipe.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>
<div id="box"><a href="/">Home</a></div>

</div>
